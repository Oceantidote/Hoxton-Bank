<div style="width: 100%; height: 100%">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex-form"}) do |f| %>
    <h2 class="sign-up-header">Enter your Email Address</h2>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, placeholder: "Email Address", label: false %>
      <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, placeholder: "Password", label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Continue", class: "secondary-background" %>
    </div>
  <% end %>
  <%#= render "devise/shared/links" %>
</div>
<%= link_to "Sign up", new_registration_path(resource_name) %>
