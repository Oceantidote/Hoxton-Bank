
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex-form"}) do |f| %>
  <h2 class="sign-up-header">Create Account</h2>
  <div class="form-inputs">
    <%= f.error_notification %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }, placeholder: "First Name", label: false %>
    <%= f.input :middle_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "middle_name" }, placeholder: "Middle Name(s)", label: false  %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" }, placeholder: "Last Name", label: false  %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: "Date of Birth", label: false  %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Next Step", class: "secondary-background" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
<%= link_to "Log in", new_session_path(resource_name) %>
