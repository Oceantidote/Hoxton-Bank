<h2 class="sign-up-header">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.error_notification %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }, placeholder: "First Name", label: false %>
    <%= f.input :middle_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "middle_name" }, placeholder: "Middle Name(s)", label: false  %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" }, placeholder: "Last Name", label: false  %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: "Email Address", label: false  %>
    <div class="sign-up_password">
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, placeholder: "Password", label: false  %>
    </div>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" }, placeholder: "Password Confirmation", label: false  %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
