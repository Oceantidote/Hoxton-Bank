<div class="view-height white-rounded-top">
  <div class="card-section">
    <h4 class="dash-header">New Beneficiary</h4>
  </div>
  <div class="card-section">
    <form action="/create_beneficiary" method="post">
      <% @errors.each do |key, value| %>
        <p><%= key %>: <%= value %></p>
      <% end %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="left-margin-10vw">
        <label for="beneficiary[name]">Name</label>
        <input type="text" name="beneficiary[name]" placeholder="e.g. John Smith" class="railsbank-input bottom-margin">
        <label for="beneficiary[account_number]">Account Number</label>
        <input type="text" name="beneficiary[account_number]" placeholder="e.g. 64042816" class="railsbank-input bottom-margin">
        <label for="beneficiary[sort_code]">Sort Code</label>
        <input type="text" name="beneficiary[sort_code]" placeholder="e.g. 80-56-34" class="railsbank-input bottom-margin">
        <input type="submit" class="btn railsbank-btn">
      </div>
    </form>
  </div>
</div>
